                        android:id="@+id/tile_floor8"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="5dp"
                        android:src="@drawable/floor_johnsontiles"
                        android:scaleType="fitXY"
                        android:clickable="true"/>

